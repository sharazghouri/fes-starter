{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": [
				"page",
				"post"
			]
		},
		{
			"name": "page-notitle",
			"title": "Page: No title",
			"postTypes": [
				"page"
			]	
		}
	],
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		},
		{
			"area": "query",
			"name": "query",
			"title": "Query (The Loop)"
		}
	],
	"settings": {
		"appearanceTools": true,
		"color": {

			"link": true,
			"palette": [
				{
					"name": "Black",
					"slug": "black",
					"color": "#000000"
				},
				{
					"name": "Dark-Gray",
					"slug": "dark-gray",
					"color": "#5a5a5a"
				},
				{
					"name": "Gray",
					"slug": "gray",
					"color": "#cdcdcd"
				},
				{
					"name": "Dark-yellow",
					"slug": "dark-yellow",
					"color": "#FFB503"
				},
				{
					"name": "Green",
					"slug": "green",
					"color": "#2A9D8F"
				},
				{
					"name": "Yellow",
					"slug": "yellow",
					"color": "#E9C46A"
				},
				{
					"name": "Orange",
					"slug": "orange",
					"color": "#F4A261"
				},
				{
					"name": "Red",
					"slug": "red",
					"color": "#E76F51"
				},
				{
					"name": "White",
					"slug": "white",
					"color": "#FFFFFF"
				},
				{
					"name": "Base",
					"slug": "base",
					"color": "var(--wp--preset--color--white)"
				},
				{
					"name": "Primary",
					"slug": "primary",
					"color": "var(--wp--preset--color--black)"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "var(--wp--preset--color--dark-gray)"
				},
				{
					"name": "Foreground",
					"slug": "foreground",
					"color": "var(--wp--preset--color--black)"
				},
				{
					"name": "Background",
					"slug": "background",
					"color": "var(--wp--preset--color--white)"
				}
			]
		},
		"layout": {
			"contentSize": "650px",
			"wideSize": "1200px"
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"size": "1rem",
					"slug": "30",
					"name": "1"
				},
				{
					"size": "1.5rem",
					"slug": "40",
					"name": "2"
				},
				{
					"size": "1.75rem",
					"slug": "50",
					"name": "3"
				},
				{
					"size": "2rem",
					"slug": "60",
					"name": "4"
				},
				{
					"size": "3rem",
					"slug": "70",
					"name": "5"
				},
				{
					"size": "5rem",
					"slug": "80",
					"name": "6"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"lineHeight": true,
			"fontFamilies": [
				{
					"fontFamily": "system-ui, -apple-system, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, \"Noto Sans\", \"Liberation Sans\", sans-serif",
					"name": "Sans Serif",
					"slug": "sans-serif"
				},
				{
					"fontFamily": "\"Poppins\", serif",
					"name": "Poppins",
					"slug": "poppins",
					"fontFace": [
						{
							"fontFamily": "Poppins",
							"fontWeight": "300",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/Poppins/Poppins-Light.ttf" ]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/Poppins/Poppins-Regular.ttf" ]
						},
						{
							"fontFamily": "Poppins",
							"fontWeight": "500",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/Poppins/Poppins-Medium.ttf" ]
						}
					]
				},
				{
					"fontFamily": "\"Tenor Sans\", serif",
					"name": "Tenor Sans",
					"slug": "tenor-sans",
					"fontFace": [

						{
							"fontFamily": "Poppins",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/Tenor_Sans/TenorSans-Regular.ttf" ]
						}
					]
				}
			],
			"fontSizes": [
				{
          "slug": "extra-small",
          "size": "0.9rem",
          "name": "Extra Small"
        },
        {
          "slug": "small",
          "size": "1rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "1.125rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.375rem",
          "name": "large"
        },
        {
          "slug": "big",
          "size": "2rem",
          "name": "Big"
        },
        {
          "slug": "very-big",
          "size": "2.75rem",
          "name": "Very Big"
        },
        {
          "slug": "extra-big",
          "size": "3rem",
          "name": "Extra Big"
        },
        {
          "slug": "very-large",
          "size": "3.5rem",
          "name": "Very Large"
        },
        {
          "slug": "super-large",
          "size": "4rem",
          "name": "Super Large"
        },
        {
          "slug": "extra-large",
					"size": "clamp(1.75rem, 3vw, 2.25rem)",
          "name": "Extra Large"
					
        }
			]
		},
		"useRootPaddingAwareAlignments": true,
		"custom": {
			"typography": {
				"line-height": {
					"body": 1.7,
					"heading": 1.3,
					"page-title": 1.1
				},
				"font-weight": {
					"light": "300",
					"normal": "400"
				},
				"font-size": {
					"huge": "clamp(2.25rem, 4vw, 2.75rem)",
					"gigantic": "clamp(2.75rem, 6vw, 3.25rem)",
					"colossal": "clamp(3.25rem, 8vw, 6.25rem)"
				}
			}
		}
	},
	"styles": {
		"blocks": {
			"core/site-tagline": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "1.4"
				}
			},
			"core/search": {
				"border": {
					"width": "1px",
					"radius": "0px"
				},
				"color": {
					"text": "var(--wp--preset--color--dark-gray)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--20)",
						"bottom": "var(--wp--preset--spacing--20)",
						"left": "var(--wp--preset--spacing--20)",
						"right": "var(--wp--preset--spacing--20)"
					}
				}
			},
			"core/post-author": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--typography--line-height--body)"
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--typography--line-height--body)"
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--typography--line-height--body)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "var(--wp--custom--typography--font-weight--normal)",
					"textTransform": "uppercase"
				}
			},
			"core/code": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--30)",
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)"
					}
				},
				"border": {
					"width": "1.5px",
					"radius": "0px",
					"color": "var(--wp--preset--color--dark-gray)",
					"style": "solid"
				}
			},
			"core/heading": {
				"typography": {
					"lineHeight": "1.4",
					"textTransform": "capitalize",
					"fontFamily":"var(--wp--preset--font-family--tenor-sans)"
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--black)"
		},
		"elements": {
			"button": {
				"border": {
					"width": "0",
					"radius": "0"
				},
				"color": {
					"background": "var(--wp--preset--color--black)",
					"text": "var(--wp--preset--color--white)"
				},
				"spacing": {
					"padding": {
						"top": "0.75rem",
						"right": "1.25rem",
						"bottom": "0.75rem",
						"left": "1.125rem"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "var(--wp--custom--typography--font-weight--normal)",
					"letterSpacing": "0.2em",
					"textTransform": "uppercase",
					"fontFamily":"var(--wp--preset--font-family--poppins)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--dark-gray)",
						"text": "var(--wp--preset--color--white)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--dark-gray)",
						"text": "var(--wp--preset--color--white)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--dark-gray)",
						"text": "var(--wp--preset--color--white)"
					}
				},
				":visited": {
					"color": {
						"background": "var(--wp--preset--color--dark-gray)",
						"text": "var(--wp--preset--color--white)"
					}
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--dark-gray)"
				}
			},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--serif)",
					"fontSize": "var(--wp--custom--typography--font-size--colossal)",
					"lineHeight": "var(--wp--custom--typography--line-height--page-title)",
					"fontWeight": "var(--wp--custom--typography--font-weight--normal)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--serif)",
					"fontSize": "var(--wp--custom--typography--font-size--gigantic)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)",
					"fontWeight": "var(--wp--custom--typography--font-weight--normal)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--serif)",
					"fontSize": "var(--wp--custom--typography--font-size--huge)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)",
					"fontWeight": "var(--wp--custom--typography--font-weight--normal)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			}
		},
		"spacing": {
			"blockGap": "1.5rem",
			"padding": {
				"top": "var(--wp--preset--spacing--30)",
				"right": "var(--wp--preset--spacing--40)",
				"bottom": "var(--wp--preset--spacing--30)",
				"left": "var(--wp--preset--spacing--40)"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--sans-serif)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "var(--wp--custom--typography--line-height--body)"
		}
	}
}